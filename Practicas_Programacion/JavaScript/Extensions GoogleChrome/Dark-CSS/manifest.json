{
  "name": "Dark-CSS",
  "version": "0.3",
  "description": "Añade un filtro de inversión de colores y hue a la página actual.",
  "manifest_version": 3,
  "action": {
    "default_title": "Activar modo oscuro",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "background": {
    "service_worker": "background_v3.js"
  },
  "permissions": [ 
      "storage", 
      "scripting", 
      "activeTab", 
      "tabs"
  ],
  "host_permissions": [
      "<all_urls>"
  ]
}