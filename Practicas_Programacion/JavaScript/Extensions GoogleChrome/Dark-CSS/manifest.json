{
  "name": "Dark-CSS",
  "version": "0.3",
  "description": "Añade un filtro de inversión de colores y hue a la página actual.",
  "manifest_version": 3,
  "action": {
    "default_title": "Activar modo oscuro",
    "default_icon": {
      "16": "images/light-mode-dark-light-16.png",
      "32": "images/light-mode-dark-light-32.png",
      "48": "images/light-mode-dark-light-48.png",
      "128": "images/light-mode-dark-light-128.png"
    }
  },
  "background": {
    "service_worker": "background_v3.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [ 
      "storage", 
      "scripting", 
      "activeTab", 
      "tabs"
  ],
  "host_permissions": [
      "<all_urls>"
  ]
}