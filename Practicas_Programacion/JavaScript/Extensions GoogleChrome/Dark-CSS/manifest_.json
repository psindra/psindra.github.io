{
    "name": "color-scheme",
    "version": "0.2",
    "description": "add 'color-scheme' css property to the current page",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "operar??",
        "default_icon": {
          "16": "images/get_started16.png",
          "32": "images/get_started32.png",
          "48": "images/get_started48.png",
          "128": "images/get_started128.png"
        }
      },
      "permissions": [ "webRequestBlocking", "storage", "scripting", "<all_urls>", "activeTab", "tabs", "declarativeContent"]
}